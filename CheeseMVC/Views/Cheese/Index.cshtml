@{
}

<h1>My Cheese</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (ViewBag.cheeses.Count == 0)
{
    <p>No cheeses yet!</p>
}

    <table class="table">
        <thead>
            <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
        </thead>
        @foreach (var cheese in ViewBag.cheeses)

    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></td>
        </tr>
}
    </table>
