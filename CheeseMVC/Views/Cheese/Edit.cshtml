@{
}

<h1>Edit @ViewBag.cheeses.Name (ID: @ViewBag.cheeses.CheeseId)</h1>

<form method="post">
    <div class="form-group">
        <label>Name:</label>
        <input name="@ViewBag.cheeses.Name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description:</label>
        <textarea name="@ViewBag.cheeses.Description" type="text" class="form-control"> </textarea>
    </div>
    <input type="hidden" value="@ViewBag.cheeses.CheeseId" name="id" />
    <button class="btn btn-primary" type="submit" value="Edit Cheese"> Edit Cheese</button>
</form>